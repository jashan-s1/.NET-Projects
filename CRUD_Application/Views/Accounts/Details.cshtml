@model CRUD_Application.Models.Account

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-8">
    <h4>Details: Account</h4>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>Account Number</th>
            <td>@Model.AccountNumber</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>State</th>
            <td>@Model.State</td>
        </tr>
        <tr>
            <th>Date of Opening</th>
            <td>@Model.DateOfOpening.ToString("yyyy-MM-dd")</td>
        </tr>
        <tr>
            <th>Amount</th>
            <td>@Model.Amount.ToString("C")</td>
        </tr>
        <tr>
            <th>Account Type</th>
            <td>@Model.AccountType</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>@Model.Status</td>
        </tr>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.AccountNumber" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
